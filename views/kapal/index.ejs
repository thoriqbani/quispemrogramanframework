<%- include('../partials/header') %>
<div class="container">
  <%- include('../partials/message') %>
    <a href="/kapal/create" class="btn btn-primary btn-sm btn-success">Tambah</a>
    <div class="row">
      <div class="col">
        <table class="table">
          <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">nama kapal</th>
                <th scope="col">nama pemilik</th>
                <th scope="col">nama dpi</th>
                <th scope="col">nama alat</th>
                <th colspan="2" scope="col">Aksi</th>
              </tr>
            </thead>
            <tbody>
              <% for(var i=0; i<data.length; i++){ %>
                <tr>
                  <th scope="row"><%= (i+1) %></th>
                  <td><%= data[i].nama_kapal %></td>
                  <td><%= data[i].nama_pemilik %></td>
                  <td><%= data[i].nama_dpi %></td>
                  <td><%= data[i].nama_alattangkap %></td>
                  
                  <td>
                    <a href="/kapal/edit/<%= data[i].id %>" class="btn btn-sm btn-warning">Edit</a>
                    <a href="/kapal/delete/<%= data[i].id %>" class="btn btn-sm btn-danger">Hapus</a>
                  </td>
                </tr>
                <% } %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
<%- include('../partials/header') %>
      
      